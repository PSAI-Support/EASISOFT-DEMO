<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!--Import account Move lines-->
        <record id="import_multiple_account_move_line_view" model="ir.ui.view">
            <field name="name">Import Multiple Journal Entries</field>
            <field name="model">gen.multi.journal.entry</field>
            <field name="arch" type="xml">
                <form string="Import Journal Items">
                    <group>
                        <group>
                            <field name="import_option" wedgit="selection"/>
                            <field name="file_to_upload"/>
                        </group>
                        <group>
                            <field name="company_id"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Import" name="import_move_lines" type="object"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                        <div style="float: right;">
                            <strong>Download Sample:</strong>
                            <a role="button"
                               href="/bi_generic_import_all/static/Sample Files/sample CSV/journal_entry.csv"
                               class="btn-primary"
                               style="margin: 0 10px; font-size: 12px; line-height: 1.5; border-radius: 3px; padding: 8px 10px; color: #ffffff;">
                                <i class="fa fa-download"/>
                                CSV file
                            </a>
                            <a role="button"
                               href="/bi_generic_import_all/static/Sample Files/Sample XLS/journal_entry.xls"
                               class="btn-primary"
                               style="font-size: 12px; line-height: 1.5; border-radius: 3px; padding: 8px 10px; color: #ffffff;">
                                <i class="fa fa-download"/>
                                Excel file
                            </a>
                        </div>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_import_multiple_account_move_line" model="ir.actions.act_window">
            <field name="name">Import Multiple Journal Entries</field>
            <field name="res_model">gen.multi.journal.entry</field>

            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem action="action_import_multiple_account_move_line"
                  id="bi_gen_multiple_journal_wizard_import"
                  parent="account.menu_finance_receivables"/>
    </data>
</odoo>
 
