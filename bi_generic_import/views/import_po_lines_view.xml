<?xml version="1.0"?>
<odoo>
	<data>

		<record id="po_order_wizard_view" model="ir.ui.view">
			<field name="name">Import Purchase Order Lines</field>
			<field name="model">import.po.line.wizard</field>
			<field name="arch" type="xml">
				<form>
					<group>
					    <field name="import_option" widget="radio"/>
						<field name="purchase_order_file"/>
					</group>
					<group>
				        	<field name="import_prod_option" widget='radio'/>
				    	</group>
					<group>
				        	<field name="product_details_option" widget='radio'/>
				    	</group>
					<footer>
						<button string="Import" name="import_pol" class="oe_highlight" type="object"/>
						<div style="margin-left: auto;margin-right: 0;">
	                        <strong>Download Sample:</strong>
	                        <a role="button" href="/bi_generic_import/static/Sample XLS-CSV File/Sample CSV File/purchase_order_line.csv" class="btn-primary" style="margin: 0 10px; font-size: 12px; line-height: 1.5; border-radius: 3px; padding: 8px 10px; color: #ffffff;">
	                        <i class="fa fa-download"/>
	                        CSV file
	                        </a>
	                        <a role="button" href="/bi_generic_import/static/Sample XLS-CSV File/Sample XLS File/purchase_order_line.xls" class="btn-primary" style="font-size: 12px; line-height: 1.5; border-radius: 3px; padding: 8px 10px; color: #ffffff;">
	                        <i class="fa fa-download"/>
	                        Excel file
	                        </a>
                        </div>
					</footer>
				</form>
			</field>
		</record>

		<record id="import_po_line_action" model="ir.actions.act_window">
			<field name="name">Import Purchase Order Lines</field>
			<field name="res_model">import.po.line.wizard</field>
			<field name="target">new</field>
			
			<field name="view_mode">form</field>
		</record>

		<record id="purchase_order_inherited_view" model="ir.ui.view">
			<field name="name">Purchase Order</field>
			<field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase.purchase_order_form"/>
			<field name="arch" type="xml">
				<header>
					<button name="%(import_po_line_action)d" 
					string="Import Purchase Order Lines"
                    type="action" 
                    class="btn-primary"/>
				</header>
			</field>
		</record>

	</data>
</odoo>
